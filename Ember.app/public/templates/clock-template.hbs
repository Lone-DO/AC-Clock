  top: 0px;
  left: 285px;
}

#sec {
  background: url(../assets/img/clock/sechand.png);
  z-index: 3;
}
   
#min {
  background: url(../assets/img/clock/minhand.png);
  z-index: 2;
}
   
#hour {
  background: url(../assets/img/clock/hourhand.png);
  z-index: 1;
}
</style>

<script>

    $(function tickTock() { //Beta for Template
			var sdegree = seconds * 6,
				srotate = "rotate(" + sdegree + "deg)",
				hdegree = hours * 30 + (minutes / 2),
				hrotate = "rotate(" + hdegree + "deg)",
				mdegree = minutes * 6,
				mrotate = "rotate(" + mdegree + "deg)";
				
			$("#sec").css({ "transform": srotate });
			$("#hour").css({ "transform": hrotate});
			$("#min").css({ "transform" : mrotate });
				
		});

</script>