{{#link-to 'gen'}}<button class="cancel-button">Back</button>{{/link-to}} 
<h2 class="title">New Generation</h2>

<h2>Speak Out!</h2>

<form {{action 'saveAlbum' on='submit'}}>
  <div class="form-group">
     <ol>
        <li>
           <label for="labelName">Label Name:</label>
           {{input valueBinding="labelName" class="post-field" placeholder="Label Name" required="required"}}
           </li>
        <li>
           <label for="releaseDate">Release Date:</label>
           {{view Ember.TextField valueBinding="releaseDate" class="post-field" placeholder="Release Date" required="required"}}
           </li>
        <li>
           <label for="platform">Platform:</label>
           {{view Ember.TextField valueBinding="platform" class="post-field" placeholder="Platform" required="required"}}
           </li>
        <li>
           <label for="imageURL">Upload Image(URL):</label>
           {{view Ember.TextField valueBinding="imageURL" class="post-field" placeholder="Link to image" required="required"}}
           </li>
     </ol>
  </div>
   
   <div class="form-group">
      <h3 for="text">insert Youtube ID's only</h3>
      <ul>
         <li>
            <label for="hourID">12am</label>
           {{input valueBinding="hourID" class="post-field" placeholder="youtube/ID" required="required"}}
           </li>
      </ul>
   </div>
   {{input id="save" class="btn btn-primary ctrl" type="submit" value="Save!"}}
</form>